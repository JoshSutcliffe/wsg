<h1><%= @selected_stadium.name %></h1>

<h5><a href="/stadium/<%= @selected_stadium.id %>/edit">Edit Stadium</a></h5>
<img src="<%= @selected_stadium.pictures %>" class="materialboxed" data-caption="<%= @selected_stadium.name %>">
<div class="row">
  <div class="col s3 m3 l3 center-align"><p>City: <%= @selected_stadium.city %></p></div>
  <div class="col s3 m3 l3 center-align"><p>Country: <%= @selected_stadium.country %></p></div>
  <div class="col s3 m3 l3 center-align"><p>Clubs: <%= @selected_stadium.clubs %></p></div>
    <div class="col s3 m3 l3 center-align"><p>Capacity: <%= @selected_stadium.capacity %></p></div>
  <div class="divider"></div>
  <div class="col s6 m6 l6 center-align"><p>Likes: <%= @selected_stadium.likes.count %></p></div>

  <% if liked?(@selected_stadium.id) %>
    <form action="/likes" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="hidden" name="stadium_id" value="<%= @selected_stadium.id %>">
      <div class="col center-align"><button class="btn waves-effect">Unlike</button></div>
    </form>
  <% else %>
    <form action="/likes" method="post">
      <input type="hidden" name="stadium_id" value="<%= @selected_stadium.id %>">
      <div class="col center-align"><button class="btn waves-effect">Like</button></div>
    </form>
  <% end  %>
</div>

  <div class="col 12 left-align"><p>Bio: <%= @selected_stadium.bio %></p></div>






